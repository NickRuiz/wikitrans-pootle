basedir=../..
verbosity=0

cd $basedir
verbosity="-v $verbosity"
mkdir locale
./manage.py makemessages --settings=pootle/settings.py $verbosity -e ".html" -e ".py" -l pot
mv locale/pot/LC_MESSAGES/django.po po/pootle/templates/pootle.pot
rm -rf locale
