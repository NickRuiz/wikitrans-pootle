#xgettext \
#--add-comments=l10n \
#--package-name=Pootle \
#--package-version=`egrep "^ver" ../pootle_app/__version__.py | sed "s,.*(\(.*\)),\1,g" | sed "s,[ ],,g"` \
#--language=Python \
#--keyword=localize \
